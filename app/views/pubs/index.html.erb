<div class="timtools-container centered-vertically">
  <h1>Gestion des Pubs</h1>

   <div class="timtools-cards">

    <%= link_to new_pub_path do %>
      <div class="timtools-card"><p>AJOUTER UNE NOUVELLE PUB</p></div>
    <% end %>

    </div>

    <% @pubs.each do |f| %>

      <div class="edit-card">
        <div class="image-container">
          <% if f.photo.attached? %>
            <%= cl_image_tag f.photo.key%>
          <% else %>
            <%= image_tag "logo_white.png" %>
          <% end %>
        </div>
        <div class="title-container">
          <%= f.title %>
        </div>
        <div class="possible-actions">
          <%= link_to pub_path(f) do  %>
            <i class="far fa-eye"></i>
          <% end %>
          <%= link_to edit_pub_path(f) do  %>
            <i class="far fa-edit"></i>
          <% end %>
          <%= link_to pub_path(f), method: :delete, data: { confirm: "Je vais détruire cette pub. Es-tu sûr?" } do%>
            <i class="far fa-trash-alt"></i>
          <% end %>
        </div>
      </div>
    <% end %>

</div>



