</div>

  <% @years.each do |y|%>

    <% if @toggler == true %>
      <div class="year-container-edition greyed-back">

        <div class="year"><%= y %></div>

        <div class="media-cards">

          <% @fictions.each do |f| %>

            <% if f.year.to_i == y %>

              <div class="media-card">

                <% if f.photo.attached? %>
                  <%= cl_image_tag f.photo.key%>
                <% else %>
                  <%= image_tag "logo_white.png" %>
                <% end %>

                <div class="media-card-description">
                  <p class="title"><%= f.title %></p>

                  <div class="action-links">
                    <%= link_to edit_fiction_path(f) do  %>
                      <i class="far fa-edit"></i>
                    <% end %>

                    <%= link_to fiction_path(f), method: :delete, data: { confirm: "Je vais détruire cette fiction. Es-tu sûr?" } do%>
                      <i class="far fa-trash-alt"></i>
                    <% end %>
                  </div>


                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>

      <% @toggler = false %>

    <% else %>

      <div class="year-container-edition">

        <div class="year"><%= y %></div>

        <div class="media-cards">

          <% @fictions.each do |f| %>

            <% if f.year.to_i == y %>

              <div class="media-card">

                <% if f.photo.attached? %>
                  <%= cl_image_tag f.photo.key%>
                <% else %>
                  <%= image_tag "logo_white.png" %>
                <% end %>

                <div class="media-card-description">
                  <p class="title"><%= f.title %></p>

                   <div class="action-links">
                    <%= link_to edit_fiction_path(f) do  %>
                      <i class="far fa-edit"></i>
                    <% end %>
                    <%= link_to fiction_path(f), method: :delete, data: { confirm: "Je vais détruire cette fiction. Es-tu sûr?" } do%>
                      <i class="far fa-trash-alt"></i>
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>

      <% @toggler = true %>
    <% end %>

  <% end %>


