<%= render 'shared/navbar' %>
<%= render 'shared/sidenav' %>

<div id="links-container">

  <%= link_to root_path, class: "main-button" do %>
    <p>ACCUEIL</p>
    <div id="red-div"></div>
  <% end %>

  <%= link_to nos_fictions_path, class: "main-button active" do  %>
    <p>FICTIONS</p>
    <div id="red-div"></div>
  <% end %>

  <%= link_to nos_documentaires_path, class: "main-button" do  %>
    <p>DOCUMENTAIRES</p>
    <div id="red-div"></div>
  <% end %>

  <%= link_to  nos_publicites_path, class: "main-button" do %>
    <p>PUBLICITÉS</p>
    <div id="red-div"></div>
  <% end %>

  <%= link_to apropos_path, class: "main-button" do %>
    <p>À PROPOS</p>
    <div id="red-div"></div>
  <% end %>

  <%= link_to contact_path, class: "main-button" do %>
    <p>CONTACT</p>
    <div id="red-div"></div>
  <% end %>
</div>

<div class="mobile-title">
  <p>FICTIONS</p>
</div>


<% @years.each do |y|%>

  <% if @toggler == true %>
    <div class="year-container greyed-back">
      <div class="year"><%= y %></div>
      <div class="media-cards">
        <% @fictions.each do |f| %>
          <% if f.year.to_i == y %>
            <%= link_to fiction_path(f) do %>
              <div class="media-card">
                <% if f.photo.attached? %>
                  <%= cl_image_tag f.photo.key%>
                <% else %>
                  <%= image_tag "logo_white.png" %>
                <% end %>
                <div class="media-card-description">
                  <p class="title"><%= f.title %></p>
                  <p>Réalisation : <%= f.realisator %></p>
                  <p>Durée : <%= f.duration %></p>
                </div>
              </div>
            <% end %>

          <% end %>
        <% end %>
      </div>
    </div>

    <% @toggler = false %>

  <% else %>
    <div class="year-container">
      <div class="year"><%= y %></div>
      <div class="media-cards">
        <% @fictions.each do |f| %>
          <% if f.year.to_i == y %>

            <%= link_to fiction_path(f) do %>
              <div class="media-card">
                <% if f.photo.attached? %>
                  <%= cl_image_tag f.photo.key%>
                <% else %>
                  <%= image_tag "logo_white.png" %>
                <% end %>
                <div class="media-card-description">
                  <p class="title"><%= f.title %></p>
                  <p>Réalisation : <%= f.realisator %></p>
                  <p>Durée : <%= f.duration %></p>
                </div>
              </div>
            <% end %>

          <% end %>
        <% end %>
      </div>
    </div>
    <% @toggler = true %>
  <% end %>


<% end %>

<%= render 'shared/footer' %>



