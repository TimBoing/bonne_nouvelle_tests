<div class="timtools-container centered-vertically">
  <h1>Gestion des Articles</h1>

   <div class="timtools-cards">

    <%= link_to new_article_path do %>
      <div class="timtools-card"><p>AJOUTER UN NOUVEL ARTICLE</p></div>
    <% end %>

    </div>

    <% @articles.each do |f| %>

      <div class="edit-card">
        <div class="image-container">
          <% if f.photo.attached? %>
            <%= cl_image_tag f.photo.key%>
          <% else %>
            <%= image_tag "logo_white.png" %>
          <% end %>
        </div>
        <div class="title-container">
          <%= f.title %>
        </div>
        <div class="possible-actions">
          <%= link_to article_path(f) do  %>
            <i class="far fa-eye"></i>
          <% end %>
          <%= link_to edit_article_path(f) do  %>
            <i class="far fa-edit"></i>
          <% end %>
          <%= link_to article_path(f), method: :delete, data: { confirm: "Je vais détruire cet article. Es-tu sûr?" } do%>
            <i class="far fa-trash-alt"></i>
          <% end %>
        </div>
      </div>
    <% end %>

</div>



